@model IEnumerable<demoTMDT.Models.PhieuMua>

@{
    ViewBag.Title = "IndexAdmin";
    Layout = "~/Views/Shared/Admin.cshtml";
}






<h2>Danh Sách Điện Thoại</h2>

<style>
    .max-with {
        max-width: 200px;
    }

    .button-create a {
        color: #fff;
        text-decoration: none;
    }

    .button-cn a {
        color: black;
        text-decoration: none;
    }

    .button-cn i {
        color: #fff;
    }

    th, td {
        max-width: 200px;
    }

    ul.list-trang {
        list-style: none;
    }

        ul.list-trang p {
            text-align: center;
        }

        ul.list-trang li {
            padding: 0px 15px;
            display: flex;
            justify-content: center;
        }

            ul.list-trang li a {
                color: #326690;
                text-align: center;
                text-decoration: none;
            }
</style>

<div class="col-md-10 ">

    <div class="p-4">
        <section class=" ">
            <div class=" bg-white card  p-3" style="min-width:1100px;">
                <div class="row justify-content-start">
                    <div class="col-md-2">
                        <div>
                            <button class="button-create text-white btn-sm btn-success"
                                    style="text-decoration: none;" href="">
                                @Html.ActionLink("Create New", "Create")
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 p-3">
                        <table id="myTable1"
                               class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.TenKH)</th>
                                    <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                                    <th>@Html.DisplayNameFor(model => model.SĐT)</th>
                                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                                    <th>@Html.DisplayNameFor(model => model.NgayMua)</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenKH)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                        <td>@Html.DisplayFor(modelItem => item.SĐT)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NgayMua)</td>
                                        <td style="min-width:230px;">
                                            <div class="d-flex" style="justify-content:flex-start;">
                                                <button class="button-cn btn btn-sm btn-primary text-danger border"
                                                        href="">
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.IdPM })
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="button-cn btn-sm btn-warning text-warning border"
                                                        href="">
                                                    @Html.ActionLink("Details", "Details", new { id = item.IdPM })
                                                    <i class="fas fa-info"></i>
                                                </button>
                                                <button class="button-cn btn-sm btn-danger text-danger border"
                                                        href="">
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.IdPM })
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                        </td>

                                    </tr>

                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
