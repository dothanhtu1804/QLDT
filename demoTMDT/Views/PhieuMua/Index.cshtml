@using demoTMDT.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<PhieuMua>

@{
    ViewBag.Title = "IndexShip";
    Layout = "~/Views/Shared/NVBanHang.cshtml";
}


<h2>Danh sách đơn hàng</h2>

<style>
    .max-with {
        max-width: 200px;
    }

    .button-create a {
        color: #fff;
        text-decoration: none;
    }

    .button-cn a {
        color: black;
        text-decoration: none;
    }

    .button-cn i {
        color: #fff;
    }

    th, td {
        max-width: 200px;
    }

    ul.list-trang {
        list-style: none;
    }

        ul.list-trang p {
            text-align: center;
        }

        ul.list-trang li {
            padding: 0px 15px;
            display: flex;
            justify-content: center;
        }

            ul.list-trang li a {
                color: #326690;
                text-align: center;
                text-decoration: none;
            }
</style>

<div class="col-md-10 ">

    <div class="p-4">
        <section class=" ">
            <div class=" bg-white card  p-3" style="min-width:1100px;">
                <div class="row justify-content-start">
                    <div class="col-md-2">
                        <div>
                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 p-3">
                        <p>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</p>
                        <table id="myTable1"
                               class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Tên KH</th>
                                    <th>SĐT</th>
                                    <th>Địa Chỉ</th>
                                    <th>Ngày Mua</th>
                                    <th>Màu sắc</th>
                                    <th>Tên Shipper</th>
                                    <th>Tình Trạng</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenKH)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.SĐT)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DiaChi)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.NgayMua)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Mau)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Ghichu)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TinhTrang)</td>
                                        <td style="min-width:230px;">
                                            <div class="d-flex" style="justify-content:flex-start;">
                                                <button class="button-cn btn-sm btn-warning text-warning border"
                                                        href="">
                                                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.IdPM }) |

                                                    <i class="fas fa-info"></i>
                                                </button>
                                                <button class="button-cn btn-sm btn-danger text-danger border"
                                                        href="">
                                                    @Html.ActionLink("Xoá", "Delete", new { id = item.IdPM })
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                        </td>

                                    </tr>

                                }
                            </tbody>

                        </table>
                    </div>
                </div>

                <ul class="list-trang">
                    <li>
                        <a> @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))</a>
                    </li>
                </ul>
            </div>
        </section>
    </div>
</div>
