@model IEnumerable<demoTMDT.Models.KhuyenMai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin.cshtml";
}




<h2>Quản Lý Khuyến Mãi</h2>

<style>
    .max-with {
        max-width: 200px;
    }

    .button-create a {
        color: #fff;
        text-decoration: none;
    }

    .button-cn a {
        color: black;
        text-decoration: none;
    }

    .button-cn i {
        color: #fff;
    }

    th, td {
        max-width: 200px;
    }

    #myTable1 {
    }
</style>

<div class="col-md-10 ">

    <div class="p-4">
        <section class=" ">
            <div class=" bg-white card  p-3" style="min-width:1100px;">
                <div class="row justify-content-start">
                    <div class="col-md-2">
                        <div>
                            <button class="button-create text-white btn-sm btn-success"
                                    style="text-decoration: none;" href="">
                                @Html.ActionLink("Create New", "Create")
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9  w-100 ">
                    </div>
                    <div class="col-md-12 p-3">
                        <table id="myTable1"
                               class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Mã Khuyến Mãi</th>
                                    <th>Hình ảnh</th>
                                    <th>Chi Tiết</th>

                                    <th>Ngày Bắt Đầu</th>
                                    <th>Ngày Kết Thúc</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a class=" font-weight-bold card-link " href=""></a>
                                            @Html.DisplayFor(modelItem => item.MaKM)
                                        </td>
                                        <td>
                                            <a class=" font-weight-bold card-link " href=""></a>
                                            <img src="@Url.Content(item.HinhAnh)" style="width:100%; height:100px" />
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.ChiTiet)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NgayBatDau)</td>


                                        <td>@Html.DisplayFor(modelItem => item.NgayKetThuc)</td>
                                        <td style="min-width:230px;">
                                            <div class="d-flex" style="justify-content:flex-start;">
                                                <button class="button-cn btn btn-sm btn-primary text-danger border"
                                                        href="">
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.IdKM })
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="button-cn btn-sm btn-warning text-warning border"
                                                        href="">
                                                    @Html.ActionLink("Details", "Details", new { id = item.IdKM })
                                                    <i class="fas fa-info"></i>
                                                </button>
                                                <button class="button-cn btn-sm btn-danger text-danger border"
                                                        href="">
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.IdKM })
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </div>
                                        </td>

                                    </tr>

                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
