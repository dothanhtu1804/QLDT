                                <div class="commentator d-flex">
                                    <p>@Html.DisplayFor(model => x.TenKH)</p>
                                    <span>-</span>
                                    <p>@Html.DisplayFor(model => x.NgayCMT)</p>
                                </div>
                                <div class="name-product d-flex">
