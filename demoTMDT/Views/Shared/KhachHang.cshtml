
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .row {
        margin-top: 20px;
    }

    .hot-news {
        background-color: white;
        width: 100%;
        padding: 10px;
        box-shadow: 1px 1px 1px gray;
    }

        .hot-news h2 {
            color: #c91d32;
            padding: 5px;
            border-bottom: 2px solid #c91d32;
        }

    .content {
        height: 116px;
    }

    .img-post {
        width: 40%;
        padding: 10px;
    }

        .img-post a img {
            width: 100%;
            height: 100%;
        }

    .post {
        width: 60%;
        padding: 10px;
    }

        .post a {
            color: black;
        }

            .post a:hover {
                color: #e12600;
            }

    .hot-promotion {
        box-shadow: 1px 1px 1px gray;
        margin-top: 20px;
        background-color: white;
    }

        .hot-promotion h2 {
            color: white;
            background-color: #ff0000;
            text-align: center;
            padding: 10px 0px !important;
        }

    .product-items {
        border: 1px solid #f6f6f6;
    }

        .product-items .img-product img {
            width: 150px;
            height: 200px;
            transition: all 0.6s ease;
            margin: 0px auto;
            object-fit: contain;
            display: block;
        }

            .product-items .img-product img:hover {
                width: 60%;
            }

        .product-items a {
            text-decoration: none;
            color: black;
        }

            .product-items a:hover {
                text-decoration: none;
            }

    .product-infomation {
        padding: 15px;
    }

    .product-infomation p {
        font-weight: bold;
    }

    .product-infomation span {
        color: #e12600;
        font-weight: bold;
    }

    .customer {
        margin: 20px 0px;
        background-color: white;
    }

        .customer h2 {
            font-weight: bold;
            padding: 10px !important;
            margin: 0px;
            text-align: center;
            background-color: red;
            color: white;
        }

    .img-customer {
        width: 100%;
        height: 200px;
        padding: 20px;
    }
</style>

</style>

<div id="wrapper">
