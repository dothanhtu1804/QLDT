@using demoTMDT.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<HoaDon>

@{
    ViewBag.Title = "IndexShip";
    Layout = "~/Views/Shared/NVShip.cshtml";
}



<h2>Danh sách Hóa Đơn</h2>

<style>
    .max-with {
        max-width: 200px;
    }

    .button-create a {
        color: #fff;
        text-decoration: none;
    }

    .button-cn a {
        color: black;
        text-decoration: none;
    }

    .button-cn i {
        color: #fff;
    }

    th, td {
        max-width: 200px;
    }

    ul.list-trang {
        list-style: none;
    }

        ul.list-trang p {
            text-align: center;
        }

        ul.list-trang li {
            padding: 0px 15px;
            display: flex;
            justify-content: center;
        }

            ul.list-trang li a {
                color: #326690;
                text-align: center;
                text-decoration: none;
            }
</style>

<div class="col-md-10 ">

    <div class="p-4">
        <section class=" ">
            <div class=" bg-white card  p-3" style="min-width:1100px;">
                <div class="row justify-content-start">
                    <div class="col-md-2">
                        <div>
                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 p-3">
                        <p>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</p>
                        <table id="myTable1"
                               class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Tên KH</th>
                                    <th>SĐT</th>
                                    <th>Địa Chỉ</th>
                                    <th>Email</th>
                                    <th>Tên ĐT</th>
                                    <th>Số Lượng</th>
                                    <th>Giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenKH)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.SĐT)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DiaChi)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td> @Html.DisplayFor(modelItem => item.TenDT)</td>
                                        <td>@Html.DisplayFor(modelItem => item.SoLuong)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Gia)VNĐ</td>
                                    </tr>

                                }
                            </tbody>

                        </table>
                    </div>
                </div>

                <ul class="list-trang">
                    <li>
                        <a> @Html.PagedListPager(Model, page => Url.Action("IndexShip", new { page = page }))</a>
                    </li>
                </ul>
            </div>
        </section>
    </div>
</div>
