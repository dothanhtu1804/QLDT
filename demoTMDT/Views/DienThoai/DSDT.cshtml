@using demoTMDT.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<DienThoai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/NVBanHang.cshtml";
}

<h2>Danh Sách Điện Thoại</h2>

<style>
    .max-with {
        max-width: 200px;
    }

    .button-create a {
        color: #fff;
        text-decoration: none;
    }

    .button-cn a {
        color: black;
        text-decoration: none;
    }

    .button-cn i {
        color: #fff;
    }

    th, td {
        max-width: 200px;
    }

    ul.list-trang {
        list-style: none;
    }

        ul.list-trang p {
            text-align: center;
        }

        ul.list-trang li {
            padding: 0px 15px;
            display: flex;
            justify-content: center;
        }

            ul.list-trang li a {
                color: #326690;
                text-align: center;
                text-decoration: none;
            }
</style>

<div class="col-md-10 ">

    <div class="p-4">
        <section class=" ">
            <div class=" bg-white card  p-3" style="min-width:1100px;">
                <div class="row justify-content-start">
                    <div class="col-md-2">
                        <div>
                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 p-3">
                        <p>Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</p>
                        <table id="myTable1"
                               class="table table-striped table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th>Tên Điện Thoại</th>
                                    <th>Giá</th>
                                    <th>Hình 1</th>
                                    <th>Màu 1</th>
                                    <th>Hình 2</th>
                                    <th>Màu 2</th>
                                    <th>Hình 3</th>
                                    <th>Màu 3</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a class=" font-weight-bold card-link " href=""></a>
                                            @Html.DisplayFor(modelItem => item.TenDT)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                                        <td>
                                            <a class=" font-weight-bold card-link " href=""></a>
                                            <img src="@Url.Content(item.hinh1)" style="width:100%; height:100px" />
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.mau1)</td>
                                        <td><img src="@Url.Content(item.hinh2)" style="width:100%; height:100px" /></td>
                                        <td>@Html.DisplayFor(modelItem => item.mau2)</td>
                                        <td><img src="@Url.Content(item.hinh3)" style="width:100%; height:100px" /></td>
                                        <td>@Html.DisplayFor(modelItem => item.mau3)</td>
                                        

                                    </tr>

                                }
                            </tbody>

                        </table>
                    </div>
                </div>

                <ul class="list-trang">
                    <li>
                        <a> @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))</a>
                    </li>
                </ul>
            </div>
        </section>
    </div>
</div>
